@model GymAdmin.Data.Entities.Event

<table class="table table-hover table-responsive table-striped" id="MyTable">
    <!-- Text -->
    <thead>
        <tr>
            <th>
                Nombre completo
            </th>
            <th>
                Correo electrónico
            </th>
            <th>
                Fecha de inscripción
            </th>
            <th>
                Plan activo
            </th>
        </tr>
    </thead>
    <!-- Values -->
    <tbody>
        @foreach (var item in Model.EventInscriptions)
        {
            <tr class="GymAdminTableTr">
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InscriptionDate.ToShortDateString())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.PlanInscriptions.FirstOrDefault(pi => pi.PlanStatus == GymAdmin.Enums.PlanStatus.Active))
                </td>
            </tr>
        }
    </tbody>
</table>