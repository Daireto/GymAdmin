@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <!-- Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- View data -->
    <title>Gallery - GymAdmin</title>

    <!-- Libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/font-awesome/css/all.min.css" />

    <!-- GymAdmin style -->
    <link rel="stylesheet" type="text/css" href="~/css/Home/Gallery.css" />

    <style>
        .fa-house,
        .fa-landmark,
        .fa-user,
        .fa-users,
        .fa-arrow-right-from-bracket,
        .fa-bell-concierge {
            padding-right: 5px;
        }
    </style>

</head>

<body>
    <!-- Header -->
    <header>
        <div class="contenedor">
            <div class="menu">
                <nav>
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a></li>
                    </ul>
                </nav>
                <h2>GALERÍA DE EVENTOS</h2>
                <nav>
                    <ul>
                        <li><a asp-area="" asp-controller="Account" asp-action="Login">Ingresar</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrarse</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Gallery -->
    <section id="gallery">
        <div class="events-gallery">
            <!-- Header 1 -->
            <h3>Cardio</h3>
            <div id="header1" class="events-gallery-header">
                <!-- Header image -->
                <div class="photo">
                    <img src="~/images/home/events/events-cardio-header.jpg" alt="" />
                </div>
            </div>
            <!-- Images 1 -->
            <div class="events-gallery-images">
                <!-- Image -->
                <div id="photo1" class="photo">
                    <img class="img-hover" src="~/images/home/events/events-cardio1.jpg" alt="" />
                    <div class="oculto">
                    </div>
                </div>
                <!-- Image -->
                <div id="photo2" class="photo">
                    <img class="img-hover" src="~/images/home/events/events-cardio2.jpg" alt="" />
                    <div class="oculto">
                    </div>
                </div>
                <!-- Image -->
                <div id="photo3" class="photo">
                    <img class="img-hover" src="~/images/home/events/events-cardio3.jpg" alt="" />
                    <div class="oculto">
                    </div>
                </div>
                <!-- Image -->
                <div id="photo4" class="photo">
                    <img class="img-hover" src="~/images/home/events/events-cardio4.jpg" alt="" />
                    <div class="oculto">
                    </div>
                </div>
            </div>
        </div>
        <div class="events-gallery">
            <!-- Header 2 -->
            <h3>Body Balance</h3>
            <div id="header2" class="events-gallery-header">
