            </div>
            <!-- Images 2 -->
            <div class="events-gallery-images">
                <!-- Image -->
                <div id="photo1" class="photo">
                    <img class="img-hover" src="~/images/home/events/events-women1.jpg" alt="" />
                    <div class="oculto">
                    </div>
                </div>
                <!-- Image -->
                <div id="photo2" class="photo">
                    <img class="img-hover" src="~/images/home/events/events-women2.jpg" alt="" />
                    <div class="oculto">
                    </div>
                </div>
                <!-- Image -->
                <div id="photo3" class="photo">
                    <img class="img-hover" src="~/images/home/events/events-women3.jpg" alt="" />
                    <div class="oculto">
                    </div>
                </div>
                <!-- Image -->
                <div id="photo4" class="photo">
                    <img class="img-hover" src="~/images/home/events/events-women4.jpg" alt="" />
                    <div class="oculto">
                    </div>
                </div>
            </div>
        </div>
        <div class="events-gallery">
            <!-- Header 3 -->
            <h3>Yoga</h3>
            <div id="header3" class="events-gallery-header">
                <!-- Header image -->
                <div class="photo">
                    <img src="~/images/home/events/events-yoga-header.jpg" alt="" />
                </div>
            </div>
            <!-- Images 3 -->
            <div class="events-gallery-images">
