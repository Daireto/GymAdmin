@model IEnumerable<GymAdmin.Data.Entities.Service>

@{
    ViewData["Title"] = "Services";
}

<!-- Libraries -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<!-- GymAdmin style -->
<link rel="stylesheet" type="text/css" href="~/css/tables.css" />
<link rel="stylesheet" type="text/css" href="~/css/User/Users.css" />

<style>
    a .fa-bell-concierge, a .fa-user-tie {
        padding-right: 5px;
    }

    h3 .fa-hand-fist {
        padding-right: 0;
        padding-left: 10px;
    }

    #MyTable th, .td_option{
        text-align:center;
    }
</style>

<!-- Services -->
<div class="row">
    <div class="col-md-12 GymAdminTableContainer">
        <div class="panel panel-default">
            <div class="panel-heading GymAdminTableHeading">
                <h3 class="panel-title GymAdminTableTitle">Servicios<i class="fa-solid fa-hand-fist"></i></h3>
                <div>
                    <button disable class="GymAdminFormButton">
                        <a asp-action="Create" class="GymAdminFormElement GymAdminFormLabel"><i class="fa-solid fa-bell-concierge"></i>Crear servicio</a>
                    </button>
                    <button disable class="GymAdminFormButton">
                        <a asp-action="ShowProfessionals" class="GymAdminFormElement GymAdminFormLabel"><i class="fa-solid fa-user-tie"></i>Ver profesionales</a>
                    </button>
                </div>
            </div>
            <div class="panel-body GymAdminTable">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <!-- Text -->
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                Cantidad de profesionales
                            </th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <!-- Values -->
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="GymAdminTableTr">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProfessionalsNumber)
                                </td>
                                <td class="td_option">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalles</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#MyTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "aLengthMenu": [
                [25, 50, 100, 200, -1],
                [25, 50, 100, 200, "Todos"]
            ]
        });
    });
</script>
}
