@model GymAdmin.Data.Entities.Service

@{
    ViewData["Title"] = "Delete";
}

<!-- GymAdmin style -->
<link rel="stylesheet" type="text/css" href="~/css/forms.css" />
<link rel="stylesheet" type="text/css" href="~/css/Account/Register.css" />
<link rel="stylesheet" type="text/css" href="~/css/Account/EditUser.css" />
<link rel="stylesheet" type="text/css" href="~/css/Account/ViewUser.css" />

<style>
    .fa-lock {
        padding-right: 5px;
    }

    .GymAdminDeleteButton {
        border-color: #DC3545 !important;
        color: #DC3545 !important;
    }

        .GymAdminDeleteButton:hover {
            background-color: #DC3545 !important;
            color: black !important;
        }
</style>

<!-- View service page -->
<div id="GymAdminPrincipalContainer">
    <div class="row" id="GymAdminRegisterFormElementsContainer">
        <div class="col-md-12" id="GymAdminFieldsContainer">
            <form asp-action="Delete" id="GymAdminForm">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-12">
                        <!-- Field -->
                        <div class="form-group GymAdminFormElement">
                            <h1 style="text-align:center;">¿Estás seguro de querer eliminar este servicio?</h1>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- Left column -->
                    <div class="col-md-6 GymAdminFormColumn">
                        <!-- Field -->
                        <div class="form-group GymAdminFormElement">
                            <label class="control-label GymAdminFormLabel">Servicio</label>
                            <input value="@Model.Name" class="GymAdminFormInput" autocomplete="off" readonly />
                        </div>
                    </div>
                    <!-- Right column -->
                    <div class="col-md-6 GymAdminFormColumn">
                        <!-- Field -->
                        <div class="form-group GymAdminFormElement">
                            <label class="control-label GymAdminFormLabel">Precio del servicio</label>
                            <input value="@Model.Price" class="GymAdminFormInput" autocomplete="off" readonly />
                        </div>
                    </div>
                    <!-- Buttons and links -->
                    <div class="GymAdminRegisterFormButtons form-group mt-2">
                        <button disabled class="GymAdminFormButton">
                            <a asp-action="Index" class="GymAdminFormElement GymAdminFormLabel GymAdminRegisterFormButton"><i class="fa-solid fa-lock"></i>Cancelar</a>
                        </button>
                        <input type="submit" value="Eliminar" class="GymAdminFormButton GymAdminDeleteButton" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
